<div class="column is-3">
  <h3 class="title is-5 has-text-grey">Tags</h3>

  <aside class="menu">
    <ul class="list">
      <% tags.each do |tag| %>
        <li class="mb-2">
          <%= link_to tag.name, tag_path(tag.slug), class: 'has-text-dark' %>
        </li>
      <% end %>
    </ul>
  </aside>

</div>
