<%= simple_form_for post do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :title, required: true, input_html: { class: 'input', maxlength: 60 }, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :body, required: true, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <label class="label">Tags</label>

      <%= f.association :tags, collection: Tag.order(:name), prompt: "Choose a Company" %>
    </div>

    <%# <div class="control has-icons-left">
      <span class="select">

      </span>
      <span class="icon is-small is-left">
        <i class="fa fa-tag"></i>
      </span>
    </div> %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, class: "button is-info" %>
    </div>
  </div>
<% end %>