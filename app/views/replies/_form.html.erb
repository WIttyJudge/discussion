<%= simple_form_for([post, post.replies.build], url: post_replies_path(post.slug)) do |f| %>

  <div class="field">
    <div class="control">
      <%= f.input :reply, as: :text, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <%= f.button :submit, 'Leave a reply', class:'button is-info' %>

<% end %>