<div class="mb-6">
  <%= simple_form_for([post, post.replies], url: post_replies_path(post.slug)) do |f| %>

    <div class="field">
      <div class="control">
        <%= f.input :reply, as: :text, input_html: { class: 'textarea', rows: 3, placeholder: 'Add reply' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>

    <%= f.button :submit, 'Submit', class:'button is-info' %>

  <% end %>
</div>