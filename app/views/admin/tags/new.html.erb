<div class="is-flex is-justify-content-space-between is-align-items-center">
  <h1 class="title is-4 is-marginless">New Tag</h1>
  <%= link_to "Back", admin_tags_path, class: 'button is-info' %>
</div>

<hr class="navbar-divider my-4">

<%= simple_form_for @tag, url: admin_tags_path, method: :post do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :name, aequired: true, autofocus: true, input_html: { class: 'input', placeholder: 'Tag name' }, wrapper: false, label_html: { class: 'label '} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :guideline, as: :text, required: true, input_html: { class: 'textarea', placeholder: 'Tag name' }, wrapper: false, label_html: { class: 'label '} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :about, as: :text, required: true, input_html: { class: 'textarea', placeholder: 'Tag name' }, wrapper: false, label_html: { class: 'label '} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :text_color_hex, as: :color, wrapper: false, input_html: { value: '#ffffff' }, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :bg_color_hex, as: :color, wrapper: false, input_html: { value: '#3298dc' }, label_html: { class: 'label' } %>
    </div>
  </div>

  <%= f.button :submit, class: 'button is-info' %>

<% end %>
