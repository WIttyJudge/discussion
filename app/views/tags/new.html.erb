<%= simple_form_for @tag do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
    <%= f.input :name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

   <div class="field">
    <div class="control">
      <%= f.button :submit, class: "button is-info" %>
    </div>
  </div>
<% end %>